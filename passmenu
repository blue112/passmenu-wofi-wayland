#!/usr/bin/env bash

shopt -s nullglob globstar

typeit=0
if [[ $1 == "--type" ]]; then
	typeit=1
	shift
fi

IFS=$'\n'

prefix=$(readlink -f ${PASSWORD_STORE_DIR-~/.password-store})
password_files=( $(find -L $prefix -name "*.gpg" ) )
password_files=( "${password_files[@]#"$prefix"/}" )
password_files=( "${password_files[@]%.gpg}" )

password=$( (echo "_abort" ; printf '%s\n' "${password_files[@]}" ) | wofi -k /dev/null -dmenu "$@")

[[ -n $password ]] || exit

if [[ $typeit -eq 0 ]]; then
	pass show -c "$password" 2>/dev/null & sleep 45s && wl-copy -c
fi
